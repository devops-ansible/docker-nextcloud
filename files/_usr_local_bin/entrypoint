#!/usr/bin/env bash

apache-start () {
    echo 'NextCloud entrypoint done, continuing with bootup scripts ...'
}

# run official entrypoint â€“ it needs at least a parameter 1 ...
/entrypoint.sh apache-start

# run bootup scripts
/boot.sh

# if given CMD is `start` do NextCloud startup
if [ "$1" == "start" ]; then
    {{ STARTUP_COMMAND }}
else
    exec "$@"
fi
